DESCRIPTION="GTK+ PDF viewer"
HOMEPAGE="http://trac.emma-soft.com/epdfview/"
SRC_URI="http://trac.emma-soft.com/epdfview/chrome/site/releases/${P}.tar.bz2"

src_install() {
	cd ${B}
	cyginstall

	for i in 24 32 48
	do
		insinto /usr/share/icons/hicolor/${i}x${i}/apps
		newins ${S}/data/icon_epdfview-${i}.png epdfview.png
	done

	sed -i -e 's|\(Icon=\).*|\1epdfview|' ${D}/usr/share/applications/epdfview.desktop
}
